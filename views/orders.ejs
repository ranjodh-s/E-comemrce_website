<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <%- include("partials/navbar.ejs") %>

<div class="container mt-4">
  <h2>Your Orders</h2>
  <% if (orders.length === 0) { %>
    <p>No orders yet.</p>
  <% } else { %>
    <% orders.forEach(order => { %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-2">
            <img src="<%= order.image_url %>" class="img-fluid rounded-start" alt="Product Image">
          </div>
          <div class="col-md-10">
            <div class="card-body">
              <h5 class="card-title"><%= order.name %></h5>
              <p class="card-text">Quantity: <%= order.quantity %></p>
              <p class="card-text">Total: â‚¹<%= order.total_price %></p>
              <p class="card-text">Payment: <%= order.payment_method %></p>
              <p class="card-text"><small class="text-muted">Status: <%= order.status %></small></p>
              <p class="card-text"><small class="text-muted">Ordered on: <%= new Date(order.order_date).toLocaleString() %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>