<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="container mt-5">
  <h2>üí≥ Payment Gateway (Demo)</h2>
  <h4>Total Amount: ‚Çπ<%= total %></h4>

  <table class="table mt-3">
    <thead>
      <tr>
        <th>Image</th>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% cartItems.forEach(item => { %>
        <tr>
          <td><img src="<%= item.image_url %>" width="60" height="60" onerror="this.src='https://via.placeholder.com/60';"></td>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td>‚Çπ<%= item.price %></td>
          <td>‚Çπ<%= item.price * item.quantity %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <form action="/process-cart-payment" method="POST">
    <div class="mb-3">
      <label>Card Number</label>
      <input type="text" name="card_number" class="form-control" placeholder="4111 1111 1111 1111" required>
    </div>

    <div class="mb-3">
      <label>Expiry Date</label>
      <input type="text" name="expiry" class="form-control" placeholder="MM/YY" required>
    </div>

    <div class="mb-3">
      <label>CVV</label>
      <input type="text" name="cvv" class="form-control" placeholder="123" required>
    </div>

    <button type="submit" name="payment_status" value="success" class="btn btn-success">‚úÖ Complete Payment</button>
    <button type="submit" name="payment_status" value="failed" class="btn btn-danger">‚ùå Cancel Payment</button>
  </form>
</div>

</body>
</html>